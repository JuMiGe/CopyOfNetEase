<?xml version="1.0" encoding="utf-8"?>
<resources>


        <!-- 新闻大图滑动区域的自定义View -->
        <declare-styleable name="NewsImgPagerViewMark">
            <!-- 定义底部指示物所在视图,定义为一个LinearLayout的高度，默认为40像素 -->
            <attr name="dotsViewHeight" format="dimension" />
            <!-- 定义底部指示物之间的间距，默认为0 -->
            <attr name="dotsSpacing" format="dimension" />
            <!-- 定义代表当前页的指示物的样子 -->
            <attr name="dotsFocusImage" format="reference" />
            <!-- 定义代表非当前页的指示物的样子 -->
            <attr name="dotsBlurImage" format="reference" />
            <!-- 定义ViewPager中ImageView的scale类型,默认为ScaleType.FIT_XY -->
            <attr name="android:scaleType" />
            <!-- 定义底部指示物在父View(即示例灰色透明部分)的gravity属性; -->
            <attr name="android:gravity" />
            <!-- 定义底部指示物的背景颜色或背景图; -->
            <attr name="dotsBackground" format="reference|color" />
            <!-- 定义底部指示物的背景颜色或背景图的透明度，取值为0-1,0代表透明; -->
            <attr name="dotsBgAlpha" format="float" />
            <!-- 定义ViewPager自动切换的时间间隔，单位为ms，默认为1000ms； -->
            <attr name="changeInterval" format="integer" />
        </declare-styleable>

</resources>