<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/img_content_back"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/content_back" />

    <TextView
        android:id="@+id/tv_content_comm"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="7.5dp"
        android:layout_toLeftOf="@+id/img_content_menu"
        android:background="#eb413d"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/img_content_menu"
        android:layout_width="55dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/content_menu" />

</RelativeLayout>